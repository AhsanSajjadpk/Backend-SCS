<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="w-full h-full  bg-zinc-800 p-5 color-white">

        <div class="nav mb-5">
            <a class="text-blue-600" href="/">Back to home</a>
        </div>

        <div class="users mt-2  w-full flex gap-5 flex-wrap py-2 px-5 rounded-lg">
            <% users.forEach((user)=>{ %>

                <div class="card w-72 bg-zinc-600 p-3 rounded-lg">

                    <div class="img w-full h-52 bg-red-500 rounded-lg">
                        <img src="<%= user.image %>" alt="">
                    </div>

                    <h5 class="mt-3 text-3xl tracking-tighter">
                        <%= user.name %>
                    </h5>
                    <h3 class="text-white-900 mt-3 ">
                        <%= user.email%>
                    </h3>

                    <div class=" w-full flex justify-between mt-3">
                        <a class="text-yellow-600" href="">Edit</a>
                        <a class="text-red-600" href="">Delete</a>
                    </div>
                </div>



                <% }) %>
        </div>



    </div>
</body>

</html>